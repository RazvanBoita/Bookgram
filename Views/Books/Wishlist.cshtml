@model IEnumerable<LearnByDoing.Models.Book>

@{
ViewData["Title"] = "Wishlisted Books";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .book-list {
            margin-top: 20px;
        }
        .book-list .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .book-list .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">BookStore</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Books/Index">Books</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Books/Search">Search</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Books/Finished">Finished</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Books/Wishlist">Wishlist</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container book-list">
    <h1 class="text-center mb-4">Books I want to read</h1>
    <div class="row">
        @foreach (var book in Model)
        {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@book.Title</h5>
                </div>
                <div class="card-body">
                    <p><strong>Authors:</strong> @book.Authors</p>
                    <p><strong>Average Rating:</strong> @book.AverageRating</p>
                    <p><strong>ISBN:</strong> @book.Isbn</p>
                    <p><strong>ISBN-13:</strong> @book.Isbn13</p>
                    <p><strong>Language Code:</strong> @book.LanguageCode</p>
                    <p><strong>Number of Pages:</strong> @book.NumPages</p>
                    <p><strong>Ratings Count:</strong> @book.RatingsCount</p>
                    <p><strong>Text Reviews Count:</strong> @book.TextReviewsCount</p>
                    <p><strong>Publication Date:</strong> @book.PublicationDate</p>
                    <p><strong>Publisher:</strong> @book.Publisher</p>
                    <a href="/Books/Details?bookID=@book.BookId" class="btn btn-primary">View Details</a>
                    <a href="/Books/Unwish?bookId=@book.BookId" class="btn btn-primary" style="margin-top: 5px">Remove from Wishlist</a>
                    <a href="/Books/MoveToRead?bookID=@book.BookId" class="btn btn-primary" style="margin-top: 5px">Move to Finished</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
